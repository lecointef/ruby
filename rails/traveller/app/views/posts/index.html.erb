<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td>
          <% if post.user == current_user %>
            <p>Me</p>
          <% else %>
            <p><%= post.user.name %>
          <% end %>
        <td>
          <% if post.user == current_user %>
            <%= link_to 'Edit', edit_post_path(post) %>
          <% end %>
          </td>
        <td>
          <% if post.user == current_user %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
